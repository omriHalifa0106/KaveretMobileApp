<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminFragment">


    <TextView
        android:id="@+id/admin_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/david_libre"
        android:text="הרשאות מנהל"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/admin_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/admin_body"
        android:layout_width="407dp"
        android:layout_height="106dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="97dp"
        android:fontFamily="@font/david_libre"
        android:text="שלום מנהל יקר,\nבאפשרותך לבצע מספר פעולות עבור מנהל בלבד: "
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_show_last_enters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_title" />

    <Button
        android:id="@+id/button_show_last_enters"
        android:layout_width="412dp"
        android:layout_height="0dp"
        android:layout_below="@+id/admin_title"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#F4C40C"
        android:fontFamily="@font/david_libre"
        android:text=" לצפייה בכניסות האחרונות לאתר"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_show_last_bills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_body" />

    <Button
        android:id="@+id/button_show_last_bills"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/admin_title"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#F4C40C"
        android:fontFamily="@font/david_libre"
        android:text="לצפייה בחשבוניות"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_add_product_admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_show_last_enters" />

    <Button
        android:id="@+id/button_add_product_admin"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_below="@+id/admin_title"
        android:layout_marginBottom="174dp"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/david_libre"
        android:text="הוספת מוצר לרשימת המוצרים"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_show_last_bills" />


</androidx.constraintlayout.widget.ConstraintLayout>