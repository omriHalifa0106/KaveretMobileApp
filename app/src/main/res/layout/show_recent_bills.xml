<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_last_bill"
            android:background="#F4C40C"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:fontFamily="@font/david_libre"
            android:text="תעודת זהות"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username_last_bill"
            android:layout_width="441dp"
            android:layout_height="39dp"
            android:layout_below="@+id/id_last_bill"
            android:fontFamily="@font/david_libre"
            android:text="שם משתמש"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/date_last_bills"
            android:layout_width="441dp"
            android:layout_height="39dp"
            android:layout_below="@+id/username_last_bill"
            android:fontFamily="@font/david_libre"
            android:text="תאריך כניסה"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/items_cart_last_bills"
            android:layout_width="441dp"
            android:layout_height="39dp"
            android:layout_below="@+id/date_last_bills"
            android:fontFamily="@font/david_libre"
            android:text="מוצרים"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sum_last_bills"
            android:layout_width="441dp"
            android:layout_height="39dp"
            android:layout_below="@+id/items_cart_last_bills"
            android:fontFamily="@font/david_libre"
            android:text="סכום"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />




    </RelativeLayout>





</androidx.cardview.widget.CardView>
