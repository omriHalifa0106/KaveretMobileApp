<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_id_bill"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:fontFamily="@font/david_libre"
            android:text="מספר מוצר"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_name_bill"
            android:layout_width="441dp"
            android:layout_height="39dp"
            android:layout_below="@+id/product_id_bill"
            android:fontFamily="@font/david_libre"
            android:text="שם המוצר"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/product_price_bill"
            android:layout_width="441dp"
            android:layout_height="39dp"
            android:layout_below="@+id/product_name_bill"
            android:fontFamily="@font/david_libre"
            android:text="מחיר מוצר"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/product_quantity_bill"
            android:layout_width="441dp"
            android:layout_height="39dp"
            android:layout_below="@+id/product_price_bill"
            android:fontFamily="@font/david_libre"
            android:text="כמות מוצר"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_sum_bill"
            android:layout_width="441dp"
            android:layout_height="39dp"
            android:background="#F4C40C"
            android:layout_below="@+id/product_quantity_bill"
            android:fontFamily="@font/david_libre"
            android:text="סך הכל לתשלום למוצר זה"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>





</androidx.cardview.widget.CardView>
