<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductAdminActivity">

    <TextView
        android:id="@+id/addProduct_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/david_libre"
        android:text="הוספת מוצר"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/product_name_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_name_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/david_libre"
        android:text="הכנס את שם המוצר:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addProduct_title" />


    <EditText
        android:id="@+id/add_product_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/product_name_input"
        android:layout_marginBottom="61dp"
        android:fontFamily="@font/david_libre"
        android:hint="שם מוצר"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_product_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name_input" />

    <TextView
        android:id="@+id/product_price_input"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/david_libre"
        android:text="הכנס את מחיר המוצר:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/product_category_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_product_name" />


    <EditText
        android:id="@+id/add_product_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/product_price_input"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/david_libre"
        android:hint="מחיר מוצר"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/product_category_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_product_name" />

    <TextView
        android:id="@+id/product_category_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/david_libre"
        android:text="הכנס את קטגוריית המוצר:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_product_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_product_price" />


    <EditText
        android:id="@+id/add_product_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/product_category_input"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/david_libre"
        android:hint="קטגוריית המוצר"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_product_stock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_category_input" />

    <TextView
        android:id="@+id/product_stock_input"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="74dp"
        android:fontFamily="@font/david_libre"
        android:text="הכנס את מלאי המוצר:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/product_image_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_product_category" />


    <EditText
        android:id="@+id/add_product_stock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/product_stock_input"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/david_libre"
        android:hint="מלאי המוצר"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/product_image_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_product_category" />

    <TextView
        android:id="@+id/product_image_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/david_libre"
        android:text="הכנס את נתיב תמונת המוצר:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_product_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_product_stock" />

    <EditText
        android:id="@+id/add_product_image"
        android:layout_width="414dp"
        android:layout_height="0dp"
        android:layout_below="@+id/product_image_input"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/david_libre"
        android:hint="תמונת המוצר"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_add_product_to_products"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_image_input" />

    <Button
        android:id="@+id/button_add_product_to_products"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/add_product_image"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="31dp"
        android:backgroundTint="#F4C40C"
        android:fontFamily="@font/david_libre"
        android:text="הוסף"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_product_image" />

</androidx.constraintlayout.widget.ConstraintLayout>